@model WebApplicationLabo4.Models.Clubes

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Clubes</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resumen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Resumen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Inauguracion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Inauguracion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImagenEscudo)
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(@Model.ImagenEscudo))
            {
                <img src="~/images/clubes/@Model.ImagenEscudo" class="img-thumbnail"
                 class="rounded-circle" style="max-width:100px; max-height:100px;" 
              asp-append-version="true" />
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pais)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pais)
